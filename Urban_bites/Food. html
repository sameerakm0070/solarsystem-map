<script>
let total = 0;
let isLoggedIn = false;

function addToCart(item, price){
  if(!isLoggedIn){
    alert("Please login to place order!");
    location.href="#login";
    return;
  }
  let table = document.getElementById("cartItems");
  let row = table.insertRow();
  row.insertCell(0).innerText = item;
  row.insertCell(1).innerText = "‚Çπ" + price;
  total += price;
  document.getElementById("total").innerText = total;
}

function loginUser(e){
  e.preventDefault();
  isLoggedIn = true;
  total = 0;
  document.getElementById("cartItems").innerHTML = "";
  document.getElementById("total").innerText = 0;
  alert("Login Successful! You can order now.");
  location.href="#menu";
}

function confirmOrder(){
  if(total === 0){
    alert("Cart is empty!");
    return;
  }
  document.getElementById("orderTotal").innerText = total;
  document.getElementById("orderConfirm").style.display = "block";
  document.getElementById("cartItems").innerHTML = "";
  document.getElementById("total").innerText = 0;
  total = 0;
}
</script>

